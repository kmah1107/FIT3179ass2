{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 500,
  "title": "Confirmed covid-19 cases in each month ",
  "data": {
    "url": "https://raw.githubusercontent.com/kmah1107/FIT3179ass2/main/indiacovid1.csv"
  },
  "params": [
    {
      "name": "State_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Andhra Pradesh",
          "Arunachal Pradesh",
          "Assam",
          "Bihar",
          "Chhattisgarh",
          "Goa",
          "Gujarat",
          "Haryana",
          "Himachal Pradesh",
          "Jammu& Kashmir",
          "Jharkhand",
          "Karnatka",
          "Kerala",
          "Madhya Pradesh",
          "Maharashtra",
          "Manipur",
          "Meghalaya",
          "Mizoram",
          "Nagaland",
          "Odisha",
          "Punjab",
          "Rajasthan",
          "Sikkim",
          "Tamil Nadu",
          "Tripura",
          "Uttar Pradesh",
          "Uttrakhand",
          "West Bengal",
          "Andaman & NicobarIsland",
          "Chandigarh",
          "Daman & Diu",
          "Lakshadweep",
          "Puducherry"
        ],
        "labels": [
          "Show All",
          "Andhra Pradesh",
          "Arunachal Pradesh",
          "Assam",
          "Bihar",
          "Chhattisgarh",
          "Goa",
          "Gujarat",
          "Haryana",
          "Himachal Pradesh",
          "Jammu& Kashmir",
          "Jharkhand",
          "Karnatka",
          "Kerala",
          "Madhya Pradesh",
          "Maharashtra",
          "Manipur",
          "Meghalaya",
          "Mizoram",
          "Nagaland",
          "Odisha",
          "Punjab",
          "Rajasthan",
          "Sikkim",
          "Tamil Nadu",
          "Tripura",
          "Uttar Pradesh",
          "Uttrakhand",
          "West Bengal",
          "A & N Islands",
          "Chandigarh",
          "D & N Haveli",
          "Daman & Diu",
          "Lakshadweep",
          "Puducherry"
        ],
        "name": "Select State: "
      }
    }
  ],
  "transform": [
    {"filter": "State_selection == null || datum.State == State_selection"}
  ],
  "selection": {
    "state_highlight": {"type": "multi", "fields": ["State"], "bind": "legend"}
  },
  "mark": "line",
  "encoding": {
    "x": {"field": "month", "type": "ordinal", "title": "Month", "sort": [""]},
    "y": {
      "aggregate": "sum",
      "field": "Confirmed",
      "title": "Total confirmed cases",
      "axis": {"grid": false}
    },
    "color": {
      "condition": {
        "selection": "state_highlight",
        "field": "State",
        "type": "nominal"
      }
    },
    "opacity": {
      "condition": {"selection": "state_highlight", "value": 0.9},
      "value": 0.1
    },
    "tooltip": [
      {"field": "State", "type": "nominal"},
      {"field": "Month", "type": "nominal"},
      {"field": "Confirmed Covid-19 Cases", "type": "quantitative"}
    ]
  },
  "config": {"view": {"stroke": "transparent"}}
}
